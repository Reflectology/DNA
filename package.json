{
    "name": "reflectology-visualizer",
    "displayName": "Reflectology Code Visualizer",
    "description": "Generates intricate diagrams from codebases using reflectology principles",
    "version": "0.1.0",
    "publisher": "your-publisher-name",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Visualization",
        "Other"
    ],
    "activationEvents": [
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "reflectologyVisualizer.visualizeAnyCode",
                "title": "Visualize Any Code Structure Using Reflectology",
                "category": "Reflectology"
            },
            {
                "command": "reflectologyVisualizer.generateDiagram",
                "title": "Generate Reflectology Diagram",
                "category": "Reflectology"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "reflectologyVisualizer.visualizeAnyCode",
                    "group": "navigation"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "reflectology",
                    "title": "Reflectology",
                    "icon": "resources/icon.svg"
                }
            ],
            "panel": [
                {
                    "id": "reflectologyPanel",
                    "title": "Reflectology",
                    "icon": "resources/icon.svg"
                }
            ]
        },
        "views": {
            "reflectology": [
                {
                    "id": "reflectologyEntities",
                    "name": "Entities"
                }
            ],
            "reflectologyPanel": [
                {
                    "id": "reflectologyMetrics",
                    "name": "Metrics"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "npx tsc -p ./",
        "watch": "npx tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/vscode": "^1.60.0",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "d3": "^7.6.1"
    }
}
